<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.augurit.gzsw.manager.user.mapper.OrgMapper">

    <resultMap id="org" type="com.augurit.gzsw.domain.Org">
        <id property="id" column="id" />
        <result property="name" column="name" />
        <result property="pid" column="pid" />
        <result property="xpath" column="xpath" />
        <result property="disporder" column="disporder" javaType="int"/>
    </resultMap>

    <sql id="allOrgColumns">
        id , name,pid ,xpath,disporder
    </sql>

    <select id="listOrgs" resultType="org">
        select
        <include refid="allOrgColumns"/>
        from A_ORG
        order by disporder
    </select>

    <select id="listChildOrgsById" resultMap="org">
        select
        <include refid="allOrgColumns"/>
        from A_ORG
        <if test="contain">
            START WITH pid = #{id}
            CONNECT BY PRIOR id = pid
        </if>
        <if test="!contain">
            where pid = #{id}
        </if>
        order by disporder
    </select>

    <select id="selectById" resultMap="org">
        select
        <include refid="allOrgColumns"/>
        from A_ORG
        where id = #{id}
    </select>

    <insert id="insert">
        insert into A_ORG
        (
        <include refid="allOrgColumns"/>
        )
        values (
        #{id},#{name},#{pid},#{xpath},#{disporder}
        )
    </insert>

    <update id="updateById">
        update A_ORG
        <set>
            <if test="name != null">
                name = #{name},
            </if>
            <if test="pid != null">
                pid = #{pid},
            </if>
            <if test="xpath != null">
                xpath = #{xpath},
            </if>
            <if test="disporder != null">
                disporder = #{disporder},
            </if>
        </set>
        where id = #{id}
    </update>

    <delete id="deleteByIds" parameterType="java.util.List">
        delete from A_ORG
        where id in
        <foreach collection="list" item="id" open="(" close=")" separator=",">
            #{id}
        </foreach>
    </delete>
</mapper>